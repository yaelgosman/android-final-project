<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <action
        android:id="@+id/action_global_addReviewFragment"
        app:destination="@id/addReviewFragment" />

    <!-- Auth Screens -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.letitcook.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <!-- prevents the user to go back to the login page when the user is logged in -->
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.letitcook.ui.auth.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Main Screens (Bottom Nav) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.letitcook.ui.feed.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.letitcook.ui.search.SearchFragment"
        android:label="Search">
        <!-- מאפשר מעבר לפרטי מסעדה -->
<!--        <action-->
<!--            android:id="@+id/action_search_to_details"-->
<!--            app:destination="@id/restaurantDetailsFragment" />-->
    </fragment>


    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.letitcook.ui.saved.SavedFragment"
        android:label="Saved" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.letitcook.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"
    >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_profileFragment_to_addPostFragment"
            app:destination="@id/addReviewFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.letitcook.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <!-- Add Review Screen (נפתח מהכפתור האדום) -->
    <fragment
        android:id="@+id/addReviewFragment"
        android:name="com.example.letitcook.ui.addReview.AddReviewFragment"
        android:label="Add Review">

        <argument
            android:name="post"
            app:argType="com.example.letitcook.models.entity.Post"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Placeholder for Details if needed -->
<!--    <fragment-->
<!--        android:id="@+id/restaurantDetailsFragment"-->
<!--        android:name="com.example.letitcook.ui.details.RestaurantDetailsFragment"-->
<!--        android:label="Details" />-->

</navigation>