<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <!--
      WHITE HEADER SECTION
      Elevation added for a nice shadow effect over the list
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIND A SPOT"
            android:textColor="#1A237E"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="Start typing (e.g. Sushi)..."
            android:paddingStart="16dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <!-- Categories -->
        <HorizontalScrollView
            android:id="@+id/hsvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/etSearch">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:backgroundTint="#1A237E"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatItalian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Italian"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="#1A237E"
                    app:strokeColor="#E0E0E0"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatAsian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asian"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="#1A237E"
                    app:strokeColor="#E0E0E0"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatBurgers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burgers"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="#1A237E"
                    app:strokeColor="#E0E0E0"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESULTS"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hsvCategories"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
      THE LIST SECTION
      Background comes from the Root Layout (@color/main_bg)
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRestaurants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="#EE4C58"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>