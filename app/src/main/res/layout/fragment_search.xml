<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F9F9F9">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND A SPOT"
        android:textColor="#1A237E"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- שורת חיפוש -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_input"
        android:hint="Sushi, Pasta, Tel Aviv..."
        android:paddingStart="16dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <!-- קטגוריות (Horizontal Scroll) -->
    <HorizontalScrollView
        android:id="@+id/hsvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/etSearch">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- כפתור "All" -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="All"
                android:backgroundTint="#1A237E"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>

            <!-- כפתור איטלקי - החליפי את האייקון למה שייבאת -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Italian"
                app:icon="@drawable/ic_home"
                app:iconTint="#E65100"
                android:textColor="@color/black"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"
                app:cornerRadius="20dp"
                app:strokeColor="#E0E0E0"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Asian"
                app:icon="@drawable/ic_home"
                app:iconTint="#E91E63"
                android:textColor="@color/black"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"
                app:cornerRadius="20dp"
                app:strokeColor="#E0E0E0"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvTrending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRENDING NOW"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hsvCategories"/>

    <!-- רשימת מסעדות -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRestaurants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTrending"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>