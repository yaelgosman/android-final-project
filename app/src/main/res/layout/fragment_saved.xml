<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cookbook_bg"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY COOKBOOK ðŸ“–"
        android:textColor="@color/cookbook_text_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Filter Buttons (Using Horizontal ScrollView for simplicity) -->
    <HorizontalScrollView
        android:id="@+id/scrollFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Filter: All Saved (Active by default) -->
            <TextView
                android:id="@+id/btnFilterAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_filter_active"
                android:text="All Saved"
                android:textColor="@android:color/white"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"/>

            <!-- Filter: Want to Go -->
            <TextView
                android:id="@+id/btnFilterWant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_filter_inactive"
                android:text="Want to Go"
                android:textColor="@color/cookbook_text_dark"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"/>

            <!-- Filter: Top Rated -->
            <TextView
                android:id="@+id/btnFilterTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_filter_inactive"
                android:text="Top Rated"
                android:textColor="@color/cookbook_text_dark"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSaved"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/scrollFilters"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_saved_post"/>

</androidx.constraintlayout.widget.ConstraintLayout>