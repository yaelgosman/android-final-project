<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"> <TextView
        android:id="@+id/tv_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dana Cohen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="16dp"
            app:tint="#1B2F50"
            android:contentDescription="Settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_header_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_header_name"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@color/black"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/tv_header_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/avatars"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/btn_star_big_on"
            app:tint="#FFC107"
            android:background="@drawable/circle_white_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_image"
            app:layout_constraintEnd_toEndOf="@id/iv_profile_image"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANA COHEN"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B2F50"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_lock_idle_alarm"
                app:tint="#F44336"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:text="Level 5: Sous Chef"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_level"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:max="500"
            android:progress="350"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350 / 500 XP to Level 6"
            android:textSize="10sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/pb_level"
            app:layout_constraintEnd_toEndOf="@id/pb_level"/>

        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/pb_level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="48dp">
                <TextView
                    android:text="24"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1B2F50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Reviews"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:text="4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1B2F50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Cities"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:strokeColor="#E0E0E0"
            android:textColor="#1B2F50"
            app:cornerRadius="12dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_badges_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BADGES"
            android:textStyle="bold"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/btn_edit_profile"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_badges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_badges_title">

            <include layout="@layout/item_badge_placeholder" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_reviews_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY REVIEWS"
            android:textStyle="bold"
            android:textColor="#1B2F50"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/layout_badges"
            app:layout_constraintStart_toStartOf="parent"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_reviews_title">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@color/darker_gray"
                app:shapeAppearanceOverlay="@style/RoundedSquare"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@color/darker_gray"
                app:shapeAppearanceOverlay="@style/RoundedSquare"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@color/darker_gray"
                app:shapeAppearanceOverlay="@style/RoundedSquare"/>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>